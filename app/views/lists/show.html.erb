<div class="card-category" style="background-image: url('<%= image_path "cinema1.png" %>')"><%= @list.name %>
</div>

<div class="cards m-5">
    <% @list.bookmarks.each do |bookmark| %>
        <div class="card-product">
            <div class="card-product-infos">
                <h2><%= bookmark.movie.title%></h2>
                <p><%= bookmark.movie.overview%></p>
                <p><%= bookmark.movie.rating%></p>
                <%= link_to "Delete", bookmark_path(bookmark.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </div>
        </div>
    <% end %>
</div>

<div class="m-5">
    <div class="m-2"><%= link_to "Bookmark", new_list_bookmark_path(@list), class:"btn btn-flat" %></div>
    <div class="m-2"><%= link_to "Create a List!", new_list_path(@list), class:"btn btn-flat" %></div>
    <div class="m-2"><%= link_to "All lists", lists_path, class:"btn btn-flat" %></div>
</div>